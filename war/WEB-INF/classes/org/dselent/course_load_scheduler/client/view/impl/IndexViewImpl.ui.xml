<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
<ui:style>
	.loading-glass-panel
	{
		position:fixed;
		width:100%;
		height:100%;
		visibility:hidden;
	}
		
	.gwt-popup-panel-glass
	{
		opacity:0.8;
	}
		
	.loading-image
	{
		position:fixed;
		display:block;
    	margin-left:50%;
    	margin-right:50%;
    	z-index: 1;
    	visibility:hidden;
	}
	
</ui:style>

<g:HTMLPanel>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	  <a class="navbar-brand" href="#">Course Load Scheduler</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNav">
	    <ul class="navbar-nav">
	      <li class="nav-item">
	        <a class="nav-link" href="#">Faculty</a>
	      </li>
	      <li class="nav-item">
	        <a class="nav-link" href="#">Builder</a>
	      </li>
	      <li class="nav-item">
	        <a class="nav-link" href="#">Admin</a>
	      </li>
	    </ul>
	  </div>
	</nav>
	<div class="container" id="index">	
		<g:HTMLPanel ui:field="mainPanel"/>
	</div>
	<g:Image ui:field="loadingImage" url="WEB-INF/classes/org/dselent/course_load_scheduler/client/view/images/loading.gif" addStyleNames="{style.loading-image}"/>
	<g:PopupPanel ui:field="glassLoadingPanel" addStyleNames="{style.loading-glass-panel}, {style.gwt-popup-panel-glass}"/>
</g:HTMLPanel>

</ui:UiBinder> 