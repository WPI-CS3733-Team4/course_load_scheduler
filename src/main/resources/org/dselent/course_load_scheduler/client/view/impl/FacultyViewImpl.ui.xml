
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

<ui:style>
     
	.center
	{
		position: absolute;
		width:500px;
		height:250px;
		margin-left:250px;
	}
	
    .faculty-panel
	{
		background-color:rgb(204,234,247);
	}
	
	.view-label
	{
		font-family:Times New Roman;
		font-size:32px;
	}
	
	.faculty-form
	{
		border-style:solid;
		border-width:2px;
		border-color:black;
		margin-top:20px;
		margin-left:50px;
		margin-right:50px;
	}
	
	.faculty-label
	{
		font-family:Times New Roman;
		font-style:normal;
		font-size:14px;
		font-weight:bold;
		font-stretch:normal;
		font-variant:normal;
		color:rgb(0, 0, 0);
		float:right;
		margin-left:0px;
		margin-right:8px;
		margin-top:0px;
		margin-bottom:0px;
		padding-left:0px;
		padding-right:0px;
		padding-top:0px;
		padding-bottom:0px;
	}
	 
	.faculty-text
	{
		font-family:Times New Roman;
		font-size:14px;
		font-weight: normal;
		float:right;
	 }
	 
	.warning-label
	{
		font-family:Times New Roman;
		font-size:18px;
		font-weight: bold;
		color: rgb(255, 0, 0);
		margin-top:4px;
		padding-left:50px;
		padding-right:50px;
	}
	
	.faculty-button
	{
		font-family:Times New Roman;
		font-size:14px;
		float:right;
		margin-top:10px;
		margin-right:20px;
		margin-bottom:4px;
	}
	
</ui:style>

<g:VerticalPanel ui:field="facultyPanel" addStyleNames="{style.faculty-panel} {style.center}" horizontalAlignment="center">

	<g:Label ui:field="viewLabel" addStyleNames="{style.view-label}">Course Load Scheduling System: Faculty Requests</g:Label>
	 
	<g:VerticalPanel>
		<!-- Grid panel -->
		<!-- http://www.gwtproject.org/javadoc/latest/com/google/gwt/user/client/ui/Grid.html -->
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:FlexTable ui:field="requestTable" width="100%" height="100%"/>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:Grid>
			<g:row>
				<!-- cell only works for html -->
				<!-- customcell works for widgets -->
				<g:customCell>
					<g:Label ui:field="requestIdLabel" addStyleNames="{style.faculty-label}">Request Id:</g:Label>
				</g:customCell>
				
				<g:customCell>
					<g:Label ui:field="facultyIdLabel" addStyleNames="{style.faculty-label}">Faculty Id:</g:Label>
				</g:customCell>
				
				<g:customCell>
					<g:Label ui:field="courseSectionIdLabel" addStyleNames="{style.faculty-label}">Course Section Id:</g:Label>
				</g:customCell>
			</g:row>
			
			<g:row>						
				<g:customCell>
					<g:TextBox ui:field="requestIdTextBox" addStyleNames="{style.faculty-text}"/>
				</g:customCell>
				
				<g:customCell>
					<g:TextBox ui:field="facultyIdTextBox" addStyleNames="{style.faculty-text}"/>
				</g:customCell>
				
				<g:customCell>
					<g:TextBox ui:field="courseSectionIdTextBox" addStyleNames="{style.faculty-text}"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label> </g:Label>
				</g:customCell>
				<g:customCell>
					<g:Button ui:field="requestButton" addStyleNames="{style.faculty-button}">Submit Request</g:Button>
				</g:customCell>
				<g:customCell>
					<g:Button ui:field="unrequestButton" addStyleNames="{style.faculty-button}">Remove Request</g:Button>
				</g:customCell>
			</g:row>
		</g:Grid>
		
				
	</g:VerticalPanel>
	
</g:VerticalPanel>

</ui:UiBinder>
