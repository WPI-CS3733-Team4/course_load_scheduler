<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:Style>
    
    .nav-button
	{
		float: right;
		margin-right: 6px;
		margin-left: 10px;
		margin-top: 10px;
		margin-bottom: 10px;
		font-color: #000;
		font-size: 12pt;
		font-style: bold;
		height: 35px;
		width: 150px;
	}
	
    </ui:Style>
    
    <g:HTMLPanel>
    	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	  <a class="navbar-brand" href="#">Course Load Scheduler</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNav">
	    <ul class="navbar-nav">
	      <li class="nav-item">
	        <g:Button ui:field="facultyButton" addStyleNames="{style.nav-button} btn">Faculty</g:Button>
	      </li>
	      <li class="nav-item">
	        <g:Button ui:field="builderButton" addStyleNames="{style.nav-button} btn">Builder</g:Button>
	      </li>
	      <li class="nav-item">
	        <g:Button ui:field="adminButton" addStyleNames="{style.nav-button} btn">Admin</g:Button>
	      </li>
	    </ul>
	  </div>
	</nav>
    </g:HTMLPanel>
    
</ui:UiBinder>